					<?php endfor;?>

				<?php else: ?>
					<?=$this->partial('admin/partial/filter-button', ['filters' => $q_options['filters'], 'label' => $label, 'value' => $value]);?>
				<?php endif ?>
			<?php endif ?>
		<?php endforeach;?>
		<?php if(!empty($q_options['filters']) && $q_options['layout'] == 'list') {?>
