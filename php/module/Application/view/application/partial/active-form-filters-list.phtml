<div class="row">
	<div class="col-md-12">
		<?php foreach ($q_options['filters'] as $key => $value) :?>
			<?php if ($form->get('filters')->has($key)): ?>
				<?php $label = $form->get('filters')->get($key)->getLabel();?>
				
